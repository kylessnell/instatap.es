$(document).ready(function() {
    $('.color').on('click', function() {
        $('#tape_skin img').attr('src', "/assets/"+this.id+".png")
        $('#mixtape_skin')[0].value = this.id;
    });

    $('.share_your_tape').on('click', function(e) {
  	 e.preventDefault();
      $('#next_design').click();
    })

    $('.mixtape_name').on('keyup', function() {
        if ($('.countdown')[0].innerHTML == '25') {
            $('.share_your_tape').addClass('disabled');
        } else {
            $('.share_your_tape').removeClass('disabled');
        }
    })

});

