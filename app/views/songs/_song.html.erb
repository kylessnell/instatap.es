<tr class="track_list_item">
  <td class = "not_playing_icon" style="visibility: hidden; float: left">
    <%= image_tag 'play_icon.png', :width=> '15px'%>
  </td>
  <td>
    <%= hidden_field_tag "mixtape[song_ids][]", song.id %>
    <%= button_tag "#{song.artist} #{song.title}", :class => "yt_button", :list_position => "", :yt_id => song.youtube_id, :now_playing => "false", :type => "button" %>
  </td>
  <td>
    <% if controller_name == 'songs' && controller.action_name == 'create' %>
      <%= button_tag "x", :class => "remove" %>
    <% end %>
  </td>
</tr>
